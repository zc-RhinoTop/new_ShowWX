.goods {
  padding: 20rpx 24rpx;
  border-bottom: 20rpx solid #f23f3b;
}
.goods .goods-img {
    width: 100%;
    height: 390rpx;
}
.goods .name {
    padding-bottom: 10rpx;
}
.goods .name .band-name {
      padding-right: 10rpx;
}
.goods .new {
    color: red;
    font-size: 36rpx;
}
.goods .old {
    color: #949494;
    font-size: 24rpx;
    text-decoration: line-through;
    padding-left: 10rpx;
}
.goods .goods-info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    font-size: 24rpx;
    line-height: 1.5;
}
.goods .goods-info .time .get-time {
      color: #FB8629;
}
.goods .goods-info .sall .sall-count {
      color: red;
}
.goods .btn {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin: 20rpx 0 30rpx 0;
}
.goods .btn > view {
      width: 316rpx;
      height: 70rpx;
      border-radius: 40rpx;
      color: #ffffff;
      box-sizing: border-box;
}
.goods .btn .go-category {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      padding: 0 30rpx;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      background: -webkit-linear-gradient(left, #ffcc66 0%, #ffcc66 1%, #ff6633 100%);
      background: linear-gradient(90deg, #ffcc66 0%, #ffcc66 1%, #ff6633 100%);
}
.goods .btn .go-category .icon {
        font-size: 60rpx;
}
.goods .btn .join-car {
      text-align: center;
      line-height: 70rpx;
      background-color: red;
}

