.detaile {
  height: 100%;
}
.detail-scroll {
  height: calc(100% - 100rpx);
}
.details-banner {
  height: 550rpx;
}
.details-banner .info-img {
    width: 100%;
}
.info-mes {
  padding: 20rpx 20rpx 0 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.info-mes .new-price {
    font-size: 48rpx;
    color: red;
    font-size: 700;
}
.info-mes .old-price {
    text-decoration: line-through;
    color: #949494;
    padding-left: 10rpx;
}
.info-mes .share {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 40rpx;
    color: red;
    background-color: rgba(255, 0, 0, 0.15);
    border-radius: 40rpx;
}
.title {
  padding-left: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 700;
}
.sale {
  font-size: 24rpx;
  color: #949494;
  padding-left: 60rpx;
}
.detail-info {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 700;
  padding-left: 60rpx;
  border-top: 20rpx solid #f5f5f5;
}
.detaile-img image {
  width: 100%;
  display: block;
}
.join-car {
  height: 100rpx;
  background-color: #FB8629;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
  line-height: 100rpx;
}
.join-car .car-text {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    text-align: center;
    font-size: 32rpx;
}
.join-car .car-num {
    position: relative;
    width: 190rpx;
    text-align: center;
    border-left: 1px solid #fff;
}
.join-car .car-num .num {
      position: absolute;
      top: 0;
      right: 0;
}
.join-car .car-num .car {
      font-size: 50rpx;
}

